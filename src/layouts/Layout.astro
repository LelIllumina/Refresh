---
import Head from "@components/Head/Head.astro";
import Header from "@components/Header.astro";

import "@styles/global.scss";

interface Props {
  title: string;
  description: string;
  image?: string;
  keywords?: string[];
}

const { title, description, image, keywords } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head {title} {description} {image} {keywords} />

  <body>
    <Header />

    <hr />

    <slot />

    <footer></footer>
  </body>
</html>

<style>
  hr {
    position: fixed;
    z-index: 9999;
    top: 0;

    width: 100%;
    height: 1px;
    margin: 0;
    border: 0;

    background: linear-gradient(
      to right,
      var(--accent-500),
      var(--secondary-500),
      var(--primary-500)
    );
  }
</style>
